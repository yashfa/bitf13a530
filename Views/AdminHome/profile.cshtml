@Html.Partial("_header");
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            My Profile
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Profile</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            
            @{using (Html.BeginForm("profileupd", "AdminHome", FormMethod.Post,
                     new { enctype = "multipart/form-data" }))
                        {
                            <div class="box-body">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Username</label>
                                    <label  for="exampleInputEmail1" >@Session["username"]</label>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Old Password</label>
                                    <input type="text" name="passo" class="form-control" id="exampleInputEmail1" placeholder="old password" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1" >New Password</label><br/>
                                    <input type="password" name="paasn" class="form-control" id="pass" placeholder="new password" >
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputPassword1" >Confirm Password</label><br/>
                                    <input type="password" class="form-control" id="repass" placeholder="confirm password"  onkeyup="myfun()"><b id="hp" style="color:red; visibility:hidden">password not same!</b>
                                </div>
                    
                                <div class="form-group">
                                    <label for="exampleInputFile">Profile Image</label>
                                    <input type="file" name="file" id="exampleInputFile">

                                </div>
                                </div> 
                            <!-- /.box-body -->

                            <div class="box-footer">
                                <button type="submit" class="btn btn-primary">Update</button>
                            </div>
                }
            
            }
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
    @Html.Partial("_footer");
    <script>
        document.getElementById("lp").className = "active";
    </script>
</html>

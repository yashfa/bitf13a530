<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Trip Register
            <small></small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
            <li class="active">Here</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Add a Trip</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
                <div class="box-body">
                   @{using (Html.BeginForm("addtrippkg", "AdminHome", FormMethod.Post,
                  new { enctype = "multipart/form-data" }))
                    {

                    <div class="form-group">
                        <label for="exampleInputEmail1">Title</label>
                        <input type="text" name="title" class="form-control" id="exampleInputEmail1" placeholder="Enter title">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Description</label><br>
                        <textarea rows="5" cols="100" name="description"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Price</label>
                        <input type="text" class="form-control" name="price" id="exampleInputEmail1" placeholder="Rs. 5000">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile">Image</label>
                        <input type="file" id="exampleInputFile" name="file">

                    </div>
                    <div class="form-group ">
                        <label for="exampleInputEmail1">
                            Attractions
                            <input type="text" name="attractions" class="form-control col-md-4" id="exampleInputEmail1" placeholder="4">
                        </label>
                        <label for="exampleInputEmail1">
                            Days
                            <input type="text" name="days" class="form-control col-md-4" id="exampleInputEmail1" placeholder="2">
                        </label>
                        <label for="exampleInputEmail1">
                            Nights
                            <input type="text" name="nights" class="form-control col-md-4" id="exampleInputEmail1" placeholder="1">
                        </label>
                    </div>

                    <div class="checkbox">
                        <h3>Trip Type</h3>
                        <label>
                            <input type="checkbox" name="triptype" value="park"> Amusement Park &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="natural"> Natural Sight Seeing &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="pool"> Pool and Waterpark &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="museum"> Museum &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="religious"> Religious and Cultural Places &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="shopping"> Shopping mall and Market &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="triptype" value="others"> Others &nbsp
                        </label>
                    </div>
                    <div class="checkbox">
                        <h3>Distance</h3>
                        <label>
                            <input type="checkbox" name="distance" value="airport"> Near Airport &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="distance" value="shopping"> Near Shopping District &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="distance" value="attraction"> Near Attractions &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="distance" value="traffic"> Near Traffic Station &nbsp
                        </label>
                    </div>
                    <div class="checkbox">
                        <h3>Servies</h3>
                        <label>
                            <input type="checkbox" name="service" value="room"> Room Service &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="laundry"> Laundry Seeing &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="meal"> Meal at room &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="wifi"> Wifi and Internet &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="parking"> Parking lot &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="tv"> TV and Appliances &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="pool"> Pool &nbsp
                        </label>
                        <label>
                            <input type="checkbox" name="service" value="gym"> Gym and Spa &nbsp
                        </label>
                    </div>
                                                   <!-- /.box-body -->

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                }
                }
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
    @Html.Partial("_footer");
    <script>
        document.getElementById("lt").className = "active";
    </script>
</html>

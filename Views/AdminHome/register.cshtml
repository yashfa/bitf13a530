    <![endif]-->
</head>
@Html.Partial("_header");


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Admin Registration
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Compose</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row" style="background-color:grey">

            <!-- /.col -->
            <div class="col-md-4" style="margin-left:30%;margin-top: 1%;">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title"><h2 style="margin-top:-2%; color: grey">Register new Admin</h2></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body" id="myf1">
                        @{using (Html.BeginForm("reg", "AdminHome", FormMethod.Post,
                     new { enctype = "multipart/form-data" }))
                        {

                            <div class="form-group">
                                <input class="form-control" id="nna" name="name" type="text" placeholder="Name" required>
                                <b id="np" style="color:red; visibility:hidden">name must not contain digits</b>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="email" type="email" placeholder="abc@email.com" required>
                            </div>
                            <br />
                            <div class="form-group">
                                <label for="exampleInputFile">Profile Image</label>
                                <input type="file" id="file" name="file">
                            </div><br />
                            <div class="form-group">
                                <input class="form-control" id="pass" min="6" name="password" type="password" placeholder="password" required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" id="repass" type="password" placeholder="retype password" onkeyup="myfun()"><b id="hp" style="color:red; visibility:hidden">password not same!</b>
                            </div>
                            <br />
                            <div class="form-group">
                                <button type="submit" id="regg" class="btn btn-primary btn-block btn-flat" disabled>Register</button>
                            </div>

                        }
                        }
                    </div>
                </div>
                <!-- /. box -->
            </div>
            <div class="col-md-3">

                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>

        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@Html.Partial("_footer");

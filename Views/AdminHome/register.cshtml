@{
    ViewBag.Title = "register";
}

<!DOCTYPE html>
<html>
<head>

    <script>
        function myfun() {
            var pass = document.getElementById("pass").value;
            var repass = document.getElementById("repass").value;


            if (pass != repass) {
                document.getElementById("hp").style.visibility = "visible";
                var xtmp = document.getElementById("hp");
                xtmp.style.color = "red";
                xtmp.innerHTML = "passwords not same!";
                document.getElementById("regg").disabled = true;
            }
            else if (pass == repass) {
                document.getElementById("hp").style.visibility = "visible";
                var xtmp = document.getElementById("hp");
                xtmp.style.color = "green";
                xtmp.innerHTML = "password confirmed!";
                document.getElementById("regg").disabled = false;
            }

        }
        function myfun2() {
            val = document.getElementById("nna").value;
            if (/\d/.test(val)) {
                document.getElementById("np").style.visibility = "visible";
            }
            else {
                document.getElementById("myf1").submit();
            }
        }

        window.onload = function () {
            noBack();
        }
        window.history.forward();
        function noBack() {
            window.history.forward();
        }

    </script>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Compose Message</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="../../Content1/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- fullCalendar 2.2.5-->
    <link rel="stylesheet" href="../../Content1/plugins/fullcalendar/fullcalendar.min.css">
    <link rel="stylesheet" href="../../Content1/plugins/fullcalendar/fullcalendar.print.css" media="print">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../Content1/dist/css/AdminLTE.min.css">
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link rel="stylesheet" href="../../Content1/dist/css/skins/_all-skins.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../../Content1/plugins/iCheck/flat/blue.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="../../Content1/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>

    <!-- PAGE WRAP -->
    <div id="page-wrap">
        <!-- PRELOADER -->
        <div class="preloader"></div>
        <!-- END / PRELOADER -->
       
        <!-- HEADER PAGE -->
        @Html.Partial("_header")
        <script>
            var xtmp = document.getElementById("menuc");
            xtmp.className += ' current-menu-parent';
        </script>
        <!-- END / HEADER PAGE -->

        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-5">
                        <div class="contact-page__map">
                            <div data-latlong="21.036697, 105.834871"></div>
                        </div>
                    </div>
                    <div class="col-md-6 col-md-offset-1">
                        <div class="contact-page__form">
                            <div class="title">
                                <span>We would like to know you</span>
                                <h2>CONTACT US</h2>
                            </div>
                            <div class="descriptions">
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque id tempor dolor, id cursus sem. Vestibulum placerat non nibh et sodales. </p>
                            </div>
                            <form class="contact-form" action="~/Home/Add" method="post">
                                <div class="form-item">
                                    <input type="text" value="Your Name *" name="name" required>
                                </div>
                                <div class="form-item">
                                    <input type="email" value="Your Email *" name="email" required>
                                </div>
                                <div class="form-item">
                                    <input type="text" value="Your Website (optional)" name="subject">
                                </div>
                                
                                <div class="form-textarea-wrapper">
                                    <textarea name="message" required>Message</textarea>
                                </div>
                                <div class="form-actions">
                                    <input type="submit" value="Send" class="submit-contact">
                                </div>
